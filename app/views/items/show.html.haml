%p#notice= notice

%h1=@item.title
-@item.categories.each do |cat|
  .path=link_to cat.name

.img_float= image_tag @item.images.first.image.url('medium')

%p
  = @item.full_text.html_safe

%p
  - @item.events.each do |event|
    .row
      .span3
        .small= localize(event.date_begin, :format => "%R %A %d-%B-%Y")
        .small=link_to  event.place.name , place_path(event.place)


\|
= link_to 'Back', items_path

- calendar_for(@item.events) do |t|
  .test= t.head('mon', 'tue', 'wed', 'thu', 'fri', 'sat', 'sun')
  - t.day(:day_method => :date_begin) do |day, tasks|
    .day= day.day
    -tasks.each do |task|
      .te= h(task.name)





