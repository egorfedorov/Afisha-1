%p#notice= notice

%h1=@item.title
-@item.categories.each do |cat|
  .path=link_to cat.name , category_path(cat)

.img_float= image_tag @item.images.first.image.url('medium')

%p
  = @item.full_text.html_safe



\|
= link_to 'Back', items_path

-@item.schedule.each  do |k , places|
  .row
    .span3
      %h4= localize(k, :format => "%d-%B-%Y")
      -places.each do |place ,rooms|
        .row
          .span3
            =place.name
        -rooms.each do |room, times|
          =room.try :name
          -times.each do |time|
            =time


