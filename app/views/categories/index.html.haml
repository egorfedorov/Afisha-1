- model_class = Category
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:name)
      %th= model_class.human_attribute_name(:desc)
      %th= model_class.human_attribute_name(:parent_id)
      %th= model_class.human_attribute_name(:lft)
      %th= model_class.human_attribute_name(:rgt)
      %th= model_class.human_attribute_name(:depth)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @categories.each do |category|
      %tr
        %td= link_to category.id, category_path(category)
        %td= category.name
        %td= category.desc
        %td= category.parent_id
        %td= category.lft
        %td= category.rgt
        %td= category.depth
        %td=l category.created_at
        %td
          .btn-group
            %button.btn.dropdown-toggle.btn-mini{'data-toggle'=>'dropdown'}!Дейсвие <span class='caret'>
            %ul.dropdown-menu
              %li= link_to t('.edit', :default => t("helpers.links.edit")), edit_category_path(category), :class => 'btn btn-mini'
              %li= link_to t('.destroy', :default => t("helpers.links.destroy")), category_path(category), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_category_path, :class => 'btn btn-primary'
